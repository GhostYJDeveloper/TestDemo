<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.model.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.example.demo.model.user.User">
        <result column="u_id" property="id"/>
        <result column="u_userName" property="userName"/>
        <result column="u_chineseName" property="chineseName"/>
        <result column="u_passWord" property="passWord"/>
        <result column="u_createTime" property="createTime"/>
        <result column="u_updateTime" property="updateTime"/>
        <result column="u_money" property="money"/>
        <result column="u_rechargeTime" property="rechargeTime"/>
    </resultMap>
    <insert id="insert" parameterType="com.example.demo.model.user.User">
        insert into t_user (u_id, u_userName, u_chineseName, u_passWord, u_createTime)
        values (#{id}, #{userName}, #{chineseName}, #{passWord}, #{createTime})
    </insert>

    <update id="update" parameterType="com.example.demo.model.user.User">
        UPDATE t_user
        SET u_id=#{id},
            u_userName=#{userName},
            u_chineseName=#{chineseName},
            u_passWord=#{passWord},
            u_createTime=#{createTime},
            u_updateTime=#{updateTime},
            u_money=#{money}
        WHERE u_id = #{id}
    </update>

    <!--查询所有-->
    <select id="findAll" resultMap="BaseResultMap">
        select *
        from t_user
    </select>

    <select id="selectByUserName" resultMap="BaseResultMap" parameterType="java.lang.String">
        select *
        from t_user
        where u_userName = #{userName};
    </select>

    <delete id="deleteById" parameterType="java.lang.Long">
        delete
        from t_user
        where u_id = #{id,jdbcType=INTEGER}
    </delete>

    <!--分页查询-->
    <select id="selectByPage" resultMap="BaseResultMap" parameterType="map">
        select * from t_user
        WHERE 1=1
        -- 为0时认定为'',此处不筛选
        <if test="chineseName != null and chineseName!=''">
            AND u_chineseName LIKE CONCAT('%',#{chineseName},'%')
        </if>
        <if test="userName != null and userName!=''">
            AND u_userName LIKE CONCAT('%',#{userName},'%')
        </if>
        limit #{currentIndex} , #{pageSize}
    </select>

    <select id="selectCount" resultType="java.lang.Integer" parameterType="map">
        select count(*)
        from t_user
        WHERE 1=1
        -- 为0时认定为'',此处不筛选
        <if test="chineseName != null and chineseName!=''">
            AND u_chineseName LIKE CONCAT('%',#{chineseName},'%')
        </if>
        <if test="userName != null and userName!=''">
            AND u_userName LIKE CONCAT('%',#{userName},'%')
        </if>
    </select>
</mapper>